@model List<Category>

@{
    ViewData["Title"] = "All Category";
}



<div class="container">
    <div class="row pt-4 pb-3">

        <div class="text-dark col-6 ">
            <h2> LIST OF CATEGORY </h2>
        </div>

        <div class="col-6  text-end ">
           
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> NEW CATEGORY  </a>
           
        </div>

    </div>





    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">NAME</th>
                <th scope="col">DISPLAY ORDER </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in Model.OrderBy(e => e.DisplayOrder))
            {
                <tr>
                    <td>@Item.Name</td>
                    <td>@Item.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>

