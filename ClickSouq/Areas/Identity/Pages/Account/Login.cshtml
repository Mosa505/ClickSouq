@page
@model LoginModel


@{
    ViewData["Title"] = "Log in";
}
<section class=" text-center text-lg-start">
  
    <style>
        .row {
            height: 100%;
        }

        .object-fit-cover {
            object-fit: cover;
        }
    </style>
    <div class="card mb-3">
        <div class="row g-0 d-flex align-items-center">
            <div class="row g-0">
                <div class="col-lg-4 d-none d-lg-flex p-0">
                    <img src="~/images/RegistrationAndLogin/Peter Donnelly.jfif"
                         alt="Trendy Pants and Shoes"
                         class="w-100 h-100 object-fit-cover rounded-start" />
                </div>
            <div class="col-lg-8">
                <div class="card-body py-5 px-md-5">

                    <form id="account" method="post" >
                        <h2 class="fw-bold mb-5 text-center">Login</h2>
                        <br />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <!-- Email input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- 2 column grid layout for inline styling -->
                            <div class="row mb-4">
                                <div class="col-12 d-flex justify-content-start align-items-center">
                                    <div class="form-check m-0">
                                        <input class="form-check-input me-2" asp-for="Input.RememberMe" id="rememberMe" />
                                        <label class="form-check-label fw-bold" for="rememberMe">
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                            </div>
                        <!-- Submit button -->
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                            <div class="col-md-12 p-3 text-center">
                                <section>
                                    <div class="divider d-flex align-items-center my-4">
                                        <hr class="flex-grow-1" />
                                        <span class="mx-3 fw-bold text-muted">or</span>
                                        <hr class="flex-grow-1" />
                                    </div>
                                    
                                    @{
                                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                        {
                                            <div>
                                                <p>
                                                    There are no external authentication services configured. See this
                                                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                                        article
                                                    </a>.
                                                </p>
                                            </div>
                                        }
                                        else
                                        {
                                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                                <div class="mt-2">
                                                    @foreach (var provider in Model.ExternalLogins!)
                                                    {
                                                        <button type="submit"
                                                                class="btn btn-outline-dark mx-1"
                                                                name="provider"
                                                                value="@provider.Name"
                                                                title="Log in using your @provider.DisplayName account">
                                                            <i class="bi bi-@provider.DisplayName.ToLower()"></i> @provider.DisplayName
                                                        </button>
                                                    }
                                                </div>
                                            </form>
                                        }
                                    }
                                </section>
                            </div>

                            <!-- links -->
                            <div class="d-flex justify-content-between pt-2">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p>
                                <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                </p>
                            </div>
                        
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>




<!-- Section: Design Block -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
