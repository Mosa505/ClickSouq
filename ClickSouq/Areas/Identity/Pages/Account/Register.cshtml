@page
@model RegisterModel


@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/StyleSheet.css" />
<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    

    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right bg-body-tertiary" style="
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Sign up now</h2>
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                         

                            <!-- Email input -->
                            <div data-mdb-input-init class="form-outline mb-4">

                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="fw-medium">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>


                            <!-- Password input -->
                            <div class="row">
                            <div data-mdb-input-init class="col-md-6 mb-4">
                                <input asp-for="Input.Name" class="form-control"  aria-required="true" placeholder="Full Name" />
                                    <label asp-for="Input.Name" class="fw-medium">Full Name</label>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div data-mdb-input-init class="col-md-6 mb-4">
                                    <input asp-for="Input.StreetAddress" class="form-control" aria-required="true" placeholder="Street Address" />
                                    <label asp-for="Input.StreetAddress" class="fw-medium">Street Address</label>
                                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                            </div>
                                <div data-mdb-input-init class="col-md-6 mb-4">
                                    <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="City" />
                                    <label asp-for="Input.City" class="fw-medium">City</label>
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>
                                <div data-mdb-input-init class="col-md-6 mb-4">
                                    <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder=" Canadian postal code like T2P 2C8" />
                                    <label asp-for="Input.PostalCode" class="fw-medium">Postal Code</label>
                                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                </div>
                              
                                <div data-mdb-input-init class="col-md-6 mb-4">
                                    <input asp-for="Input.Password" class="form-control" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password" class="fw-medium">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div data-mdb-input-init class="col-md-6 mb-4">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword" class="fw-medium">Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4" >
                                <select asp-for="Input.Role"  asp-items="@Model.Input.RoleList" class="form-select">
                                    <option value="0" > --- Select Role ---</option>
                                </select>
                            </div>

                           

                            <!-- Submit button -->
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
                                Sign up
                            </button>

                            <div class="d-flex justify-content-center pt-md-2">
                                <a asp-page="./Login" class="btn btn-secondary" asp-route-returnUrl="@Model.ReturnUrl">
                                    Login
                                </a>
                            </div>
                           
                            <!-- Register buttons -->
                            <div class="col-md-12 p-3 text-center">
                                <section>
                                    <div class="divider d-flex align-items-center my-4">
                                        <hr class="flex-grow-1" />
                                        <span class="mx-3 fw-bold text-muted">or</span>
                                        <hr class="flex-grow-1" />
                                    </div>

                                    @{
                                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                        {
                                            <div>
                                                <p>
                                                    There are no external authentication services configured. See this
                                                    <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                                        article
                                                    </a>.
                                                </p>
                                            </div>
                                        }
                                        else
                                        {
                                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                                <div class="mt-2">
                                                    @foreach (var provider in Model.ExternalLogins!)
                                                    {
                                                        <button type="submit"
                                                                class="btn btn-outline-dark mx-1"
                                                                name="provider"
                                                                value="@provider.Name"
                                                                title="Log in using your @provider.DisplayName account">
                                                            <i class="bi bi-@provider.DisplayName.ToLower()"></i> @provider.DisplayName
                                                        </button>
                                                    }
                                                </div>
                                            </form>
                                        }
                                    }
                                </section>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="~/images/RegistrationAndLogin/Peter Donnelly.jfif" class="w-100 rounded-4 shadow-4"
                     alt="" />
            </div>
        </div>
    </div>
   
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
