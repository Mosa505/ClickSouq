@model Category
@{
    ViewData["Title"] = "Remove Category";
}


<div class="card shadow border-0 mt-5 rounded-4" style="max-width: 1100px; margin: auto;">
    <div class="card-header text-white py-4 rounded-top-4"
         style="background-color: #08092E; border-bottom: none;">
        <h2 class="text-center fw-semibold mb-0"> Remove Category</h2>
    </div>

    <div class="card-body bg-white p-5 rounded-bottom-4">
        <form method="post" class="row g-3">
            <div class="col-12">

                <div class="form-floating mb-4">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" placeholder="Category Name" />
                    <label asp-for="Name" class="ms-2">Category Name</label>
                   
                </div>


                <div class="form-floating mb-4">
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" placeholder="Display Order" />
                    <label asp-for="DisplayOrder" class="ms-2">Display Order</label>
                   
                </div>


                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-danger col-3">
                        Delete
                    </button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-close-white  col-3 ">

                        <i class="bi bi-arrow-left-circle"></i> BACK TO LIST
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>





