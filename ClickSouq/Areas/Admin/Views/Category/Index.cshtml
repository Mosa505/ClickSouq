@model List<Category>

@{
    ViewData["Title"] = "All Category";
}
<div class=" shadow border-0 mt-4" style="max-width: 1500px; margin: auto;">
    <div class="card-header bg-gradient text-light py-4"
         style=" background-color:#08092E;border-bottom: none;">
        <h2 class="text-center fw-semibold mb-0"> LIST OF CATEGORY </h2>
    </div>

    <div class="card-body bg-white p-5 rounded-bottom-4">

        <div class="container">
            <div class="row pb-3">

                <div class="text-dark col-6 ">
                    
                </div>

                <div class="col-6  text-end ">

                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary "> <i class="bi bi-plus-circle"></i> NEW CATEGORY  </a>

                </div>

            </div>



            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th scope="col">NAME</th>
                        <th scope="col">DISPLAY ORDER </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Item in Model.OrderBy(e => e.DisplayOrder))
                    {
                        <tr>
                            <td>@Item.Name</td>
                            <td>@Item.DisplayOrder</td>
                            <td>
                                <div class="w-100 btn-group " role="group">
                                    <a asp-Controller="Category" asp-action="Edit" asp-route-id="@Item.Id" class="btn btn-light mx-2 ">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>

                                    <a asp-Controller="Category" asp-action="Delete" asp-route-id="@Item.Id" class="btn btn-danger mx-2 ">
                                        <i class="bi bi-trash3"></i> Delete
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>
</div>



