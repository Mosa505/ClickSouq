@model ProductViewModel
@{
    ViewData["Title"] = "Product";

}

<div class="card shadow border-0 mt-5 rounded-4" style="max-width: 1400px; margin: auto;">
    <div class="card-header text-white py-4 rounded-top-4"
         style="background-color:#096643;">
        <h2 class="text-center fw-semibold mb-0">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
    </div>

    <div class="card-body bg-white p-5 rounded-bottom-4">
        <form method="post" class="row g-3" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageURL" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="col-12">

                        <div class="form-floating mb-4">
                            <input asp-for="Product.Title" class="form-control border-0 shadow" placeholder="" />
                            <label asp-for="Product.Title" class="ms-2"> Title </label>
                            <span asp-validation-for="Product.Title" class="text-danger "></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Product.Author" class="form-control border-0 shadow" placeholder="" />
                            <label asp-for="Product.Author" class="ms-2"></label>
                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option value="">-- Select Category --</option>
                            </select>
                            <label asp-for="Product.CategoryId" class="ms-2"></label>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <label asp-for="Product.Description" class="ms-2"></label>
                            <textarea asp-for="Product.Description" class="form-control border-0 shadow" placeholder=""></textarea>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Product.ISBN" class="form-control border-0 shadow" placeholder="" />
                            <label asp-for="Product.ISBN" class="ms-2"></label>
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="Product.ListPrice" class="form-control border-0 shadow" placeholder=""
                                   value=@(Model.Product.Id == 0 ? "" : Model.Product.ListPrice) />
                            <label asp-for="Product.ListPrice" class="ms-2"></label>
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="Product.Price" class="form-control border-0 shadow" placeholder=""
                            value=@(Model.Product.Id==0? "":Model.Product.Price ) />
                            <label asp-for="Product.Price" class="ms-2"></label>
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="Product.Price50" class="form-control border-0 shadow" placeholder=""
                                   value=@(Model.Product.Id == 0 ? "" : Model.Product.Price50) />
                            <label asp-for="Product.Price50" class="ms-2"></label>
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="Product.Price100" class="form-control border-0 shadow" placeholder=""
                                   value=@(Model.Product.Id == 0 ? "" : Model.Product.Price100) />
                            <label asp-for="Product.Price100" class="ms-2"></label>
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12 mb-5">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Product.ImageURL" class="ms-2"></label>
                            <span asp-validation-for="Product.ImageURL" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-4">
                            @if (Model.Product.Id == 0)
                            {
                                <button type="submit" class="btn btn-success col-3">
                                    CREATE
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success col-3">
                                    Update
                                </button>

                            }

                            <a asp-controller="Product" asp-action="Index" class="btn btn-close-white  col-3 ">

                                <i class="bi bi-arrow-left-circle"></i> BACK TO LIST
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Product.ImageURL" width="100%" />
                </div>

            </div>

        </form>
        
    </div>
</div>



@section Scripts {
    <script>
        tinymce.init({
          selector: 'textarea',
          plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
          toolbar: 'undo redo | fontfamily fontsize | bold italic underline strikethrough ',
        });
    </script>

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}