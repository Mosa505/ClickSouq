@model ProductViewModel
@{
    ViewData["Title"] = "Remove Product";
}


<div class="card shadow border-0 mt-5 rounded-4" style="max-width: 1100px; margin: auto;">
    <div class="card-header text-white py-4 rounded-top-4"
         style="background-color: #096643; border-bottom: none;">
        <h2 class="text-center fw-semibold mb-0"> Remove Product</h2>
    </div>

    <div class="card-body bg-white p-5 rounded-bottom-4">
        <form method="post" class="row g-3">
            <div class="col-12">

                <div class="form-floating mb-4">
                    <input asp-for="Product.Title" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Product.Title" class="ms-2"> Title </label>
                   
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Product.Author" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Product.Author" class="ms-2"></label>
                    
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Product.Category.Name" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Product.Category.Name" class=" ms-2"></label>

                </div>
               
                <div class="form-floating mb-4">
                    <input asp-for="Product.Description" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Product.Description" class="ms-2"></label>
                  
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Product.ISBN" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Product.ISBN" class="ms-2"></label>
                    
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="Product.ListPrice" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Product.ListPrice" class="ms-2"></label>
                   
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="Product.Price" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Product.Price" class="ms-2"></label>
                  
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="Product.Price50" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Product.Price50" class="ms-2"></label>
                   
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="Product.Price100" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Product.Price100" class="ms-2"></label>
                    
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="Product.ImageURL" disabled class="form-control border-0 shadow" placeholder="" />
                    <label asp-for="Product.ImageURL" class="ms-2"></label>
                   
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-danger col-3">
                        Delete
                    </button>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-close-white  col-3 ">

                        <i class="bi bi-arrow-left-circle"></i> BACK TO LIST
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>





